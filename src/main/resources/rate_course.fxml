<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.RateCourseController" prefHeight="200" prefWidth="300">
    <children>
        <Label layoutX="20" layoutY="20" text="Rate the course (0-5):"/>
        <Spinner fx:id="rateSpinner" layoutX="20" layoutY="50" prefWidth="100"/>

        <Button text="Submit" layoutX="20" layoutY="100" onAction="#handleSubmit"/>
        <Label fx:id="messageLabel" layoutX="20" layoutY="140" textFill="green"/>
    </children>
</AnchorPane>
