<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.Color?>

<BorderPane prefHeight="650.0" prefWidth="850.0" style="-fx-background-color: #f5f5f7;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.GenerateQuizController">
   <top>
      <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #42a5f5; -fx-background-radius: 0 0 15 15;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Générer un Quiz avec IA" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.25" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
            <Label text="Créez des questions intelligentes en quelques clics" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <effect>
            <DropShadow height="5.0" radius="2.0" width="5.0">
               <color>
                  <Color opacity="0.1" />
               </color>
            </DropShadow>
         </effect>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background: #f5f5f7; -fx-background-color: transparent; -fx-border-color: transparent;" BorderPane.alignment="CENTER">
         <content>
            <VBox spacing="20.0">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
               </padding>
               <children>
                  <VBox spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15;">
                     <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                     </padding>
                     <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0">
                           <color>
                              <Color opacity="0.1" />
                           </color>
                        </DropShadow>
                     </effect>
                     <children>
                        <Label text="Information du Quiz" textFill="#4e73df">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <GridPane hgap="15.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="150.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Titre du Quiz:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" />
                              <TextField fx:id="titreField" promptText="Entrez le titre du quiz" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              
                              <Label text="Sujet:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" />
                              <TextField fx:id="subjectField" promptText="Entrez le sujet du quiz" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <Label text="Niveau de difficulté:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" />
                              <ComboBox fx:id="difficultyComboBox" prefWidth="150.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              
                              <Label text="Nombre de questions:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" />
                              <Spinner fx:id="questionCountSpinner" prefWidth="150.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              
                              <Label text="Instructions supplémentaires:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" />
                              <TextArea fx:id="additionalInstructionsArea" prefHeight="100.0" promptText="Ajoutez des instructions spécifiques pour la génération (facultatif)" style="-fx-background-radius: 5; -fx-border-radius: 5;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
                  
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="generateButton" mnemonicParsing="false" onAction="#handleGenerateQuiz" prefWidth="200.0" style="-fx-background-color: #4e73df; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 12 20;" text="Générer Quiz">
                           <effect>
                              <DropShadow height="5.0" radius="2.0" width="5.0">
                                 <color>
                                    <Color opacity="0.2" />
                                 </color>
                              </DropShadow>
                           </effect>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="150.0" style="-fx-background-color: #ebeef5; -fx-text-fill: #4e73df; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 12 20;" text="Annuler" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" top="5.0" />
                     </padding>
                  </HBox>
                  
                  <VBox fx:id="previewBox" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 20;">
                     <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0">
                           <color>
                              <Color opacity="0.1" />
                           </color>
                        </DropShadow>
                     </effect>
                     <!-- La prévisualisation du quiz sera ajoutée ici dynamiquement -->
                  </VBox>
                  
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="saveQuizButton" mnemonicParsing="false" onAction="#handleSaveQuiz" prefWidth="250.0" style="-fx-background-color: #36b37e; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 12 20;" text="Enregistrer le Quiz">
                           <effect>
                              <DropShadow height="5.0" radius="2.0" width="5.0">
                                 <color>
                                    <Color opacity="0.2" />
                                 </color>
                              </DropShadow>
                           </effect>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="20.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane> 