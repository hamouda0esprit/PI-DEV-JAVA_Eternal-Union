<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AdminPanelController" stylesheets="@../styles/admin.css">


   <!-- Contenu principal -->
   <center>
      <VBox>
         <!-- En-tête -->
         <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <children>
               <Label text="Gestion des Examens" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="addExamButton" text="+ Ajouter un examen" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;" onAction="#handleAddExam" />
            </children>
         </HBox>
         
         <!-- Main content area with sidebar and table -->
         <HBox VBox.vgrow="ALWAYS">
            <!-- Sidebar -->
            <fx:include source="AdminSidebar.fxml"/>
            
            <!-- Table area -->
            <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20;">
               <TableView fx:id="examensTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                  <columns>
                     <TableColumn fx:id="titreColumn" text="Titre" prefWidth="200"/>
                     <TableColumn fx:id="instructeurColumn" text="Instructeur" prefWidth="150"/>
                     <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250"/>
                     <TableColumn fx:id="dateCreationColumn" text="Date de création" prefWidth="120"/>
                     <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                  </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
            </VBox>
         </HBox>
      </VBox>
   </center>
   
  
</BorderPane> 