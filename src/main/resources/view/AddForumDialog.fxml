<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Forum.AddForumDialogController" style="-fx-background-color: white; -fx-padding: 20;">
    <children>
        <Label text="Titre:" />
        <TextField fx:id="titleField" promptText="Entrez le titre du forum" />

        <Label text="Sujet:" />
        <TextField fx:id="subjectField" promptText="Entrez le sujet du forum" />

        <Label text="Description:" />
        <TextArea fx:id="descriptionArea" promptText="Entrez la description du forum" wrapText="true" prefHeight="100" />

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="cancelButton" text="Annuler" />
                <Button fx:id="saveButton" text="Enregistrer" defaultButton="true" style="-fx-background-color: #0078D7; -fx-text-fill: white;" />
            </children>
            <padding>
                <Insets top="10" />
            </padding>
        </HBox>
    </children>
</VBox>