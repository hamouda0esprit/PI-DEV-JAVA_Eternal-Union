<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.EventCardController"
      styleClass="event-card" 
      style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-background-radius: 8; -fx-min-width: 300; -fx-max-width: 300;">
    
    <!-- Event Image -->
    <ImageView fx:id="eventImage" fitWidth="300" fitHeight="200" preserveRatio="true" 
               style="-fx-background-color: #f0f0f0; -fx-background-radius: 8 8 0 0;"/>
    
    <!-- Content Container -->
    <VBox spacing="10" style="-fx-padding: 16;">
        <!-- Title -->
        <Label fx:id="titleLabel" styleClass="event-title" wrapText="true">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <style>-fx-text-fill: #2c3e50;</style>
        </Label>
        
        <!-- Date with icon -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label fx:id="dateLabel" styleClass="event-date">
                <font>
                    <Font size="14.0"/>
                </font>
                <style>-fx-text-fill: #3498db;</style>
            </Label>
        </HBox>
        
        <!-- Location with icon -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label fx:id="locationLabel" styleClass="event-location">
                <font>
                    <Font size="14.0"/>
                </font>
                <style>-fx-text-fill: #7f8c8d;</style>
            </Label>
        </HBox>
        
        <!-- Description -->
        <Label fx:id="descriptionLabel" styleClass="event-description" 
               wrapText="true" maxWidth="268"
               style="-fx-text-fill: #34495e;">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        
        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS" />
        
        <!-- Action Buttons -->
        <HBox spacing="10">
            <Button fx:id="discussionButton" styleClass="discussion-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    onAction="#handleDiscussionClick"
                    style="-fx-background-color: #20B2AA; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;">
                <graphic>
                    <Label text="⌨" style="-fx-font-size: 16px;"/>
                </graphic>
            </Button>
            
            <Button fx:id="updateButton" styleClass="update-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    onAction="#handleUpdateClick"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;">
                <graphic>
                    <Label text="✎" style="-fx-font-size: 16px;"/>
                </graphic>
            </Button>
            
            <Button fx:id="deleteButton" styleClass="delete-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    onAction="#handleDeleteClick"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;">
                <graphic>
                    <Label text="✖" style="-fx-font-size: 16px;"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</VBox> 