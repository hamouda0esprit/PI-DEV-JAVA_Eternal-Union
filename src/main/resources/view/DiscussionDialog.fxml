<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Controllers.DiscussionDialogController"
      spacing="20" style="-fx-background-color: white;">
    
    <!-- Header with title -->
    <HBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 20;">
        <Label text="Discussion" style="-fx-text-fill: white; -fx-font-size: 24;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
    </HBox>
    
    <!-- Content -->
    <VBox spacing="15" style="-fx-padding: 20;">
        <!-- Description Section -->
        <Label text="Description" style="-fx-font-size: 16;">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true"
                  style="-fx-border-color: #e0e0e0; -fx-border-radius: 5;"/>
        
        <!-- Photo Upload Section -->
        <Label text="Publier une photo" style="-fx-font-size: 16;">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        
        <!-- Photo Upload Area -->
        <VBox fx:id="photoUploadBox" alignment="CENTER" spacing="10" 
              style="-fx-border-style: dashed; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-padding: 20;">
            <ImageView fx:id="uploadedImage" fitWidth="200" fitHeight="200" preserveRatio="true" visible="false"/>
            <VBox fx:id="uploadPrompt" alignment="CENTER" spacing="10">
                <Label text="☁" style="-fx-font-size: 48; -fx-text-fill: #95a5a6;"/>
                <Label text="Cliquez ou déposez une photo ici" style="-fx-text-fill: #7f8c8d;"/>
            </VBox>
            <Button fx:id="choosePhotoButton" text="Choisir une photo" 
                    style="-fx-background-color: transparent; -fx-border-color: #3498db; -fx-text-fill: #3498db; -fx-border-radius: 5;"
                    onAction="#handleChoosePhoto"/>
        </VBox>
    </VBox>
</VBox> 