<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.EventCardStudentController"
      styleClass="event-card" 
      style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-background-radius: 8; -fx-min-width: 300; -fx-max-width: 300;">
    
    <!-- Event Image -->
    <ImageView fx:id="eventImage" fitWidth="300" fitHeight="200" preserveRatio="true" 
               style="-fx-background-color: #f0f0f0; -fx-background-radius: 8 8 0 0;"/>
    
    <!-- Content Container -->
    <VBox spacing="10" style="-fx-padding: 15;">
        <!-- Event Title -->
        <Label fx:id="titleLabel" styleClass="event-title" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <!-- Event Date -->
        <Label fx:id="dateLabel" styleClass="event-date" 
               style="-fx-text-fill: #666666; -fx-font-size: 14px;"/>
        
        <!-- Event Location -->
        <Label fx:id="locationLabel" styleClass="event-location" 
               style="-fx-text-fill: #666666; -fx-font-size: 14px;"/>
        
        <!-- Event Description -->
        <Label fx:id="descriptionLabel" styleClass="event-description" 
               style="-fx-text-fill: #666666; -fx-font-size: 14px;" 
               wrapText="true"/>
        
        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="participateButton" text="Participate" 
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4; -fx-cursor: hand;"
                    onAction="#handleParticipateClick"/>
            <Button fx:id="discussionButton" text="Discussion" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4; -fx-cursor: hand;"
                    onAction="#handleDiscussionClick"/>
        </HBox>
    </VBox>
</VBox> 